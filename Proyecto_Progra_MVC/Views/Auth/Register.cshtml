@using Proyecto_Progra_MVC.Models.Enums
@model RegisterInputModel

<style>
    .header {
        margin-bottom: 20px;
    }
        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }
    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }
    .inputs {
        margin-top: 25px;
    }
        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }
        .inputs #submit {
            width: 100%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>
<div class="form-row">
    <div class="form-group col-5">
        <form method="post">
            <div class="form-group header">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Sign Up</h3>
            </div>
            <div class="form-group">
                <div class="clearfix separator"></div>
            </div>
            <div class="form-group inputs">

                <label asp-for="Name" class="form-text"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="Lastname" class="form-text"></label>
                <input asp-for="Lastname" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="Lastname" class="text-danger"></span>

                <label asp-for="Age" class="form-text"></label>
                <input asp-for="Age" class="form-control" placeholder="Age" />
                <span asp-validation-for="Age" class="text-danger"></span>

                <label asp-for="Genero" class="form-text"></label>
                @foreach (var genero in Enum.GetValues(typeof(Generos)))
                {
                    <label class="form-check form-check-inline">
                        <input asp-for="Genero" type="radio" value="@((int)genero)"
                            class="form-check form-check-input" aria-describedby="ayudaGenero" />
                        @Enum.GetName(typeof(Generos), genero)
                    </label>
                }
                <span asp-validation-for="Genero" class="text-danger"></span>

                <label asp-for="PhysicalActivity" class="form-text"></label>
                <input asp-for="PhysicalActivity" class="form-control" placeholder="Physical Activity" />
                <span asp-validation-for="PhysicalActivity" class="text-danger"></span>

                <label asp-for="Email" class="form-text"></label>
                <input asp-for="Email" class="form-control" placeholder="E-mail" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Password" class="form-text"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <label asp-for="ConfirmPassword" class="form-text"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Password Confirmation" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            </div>
            <div class="form-group inputs">
                <button id="submit" type="submit" class="btn btn-outline-primary">Sign up</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}